---
import MainGridLayout from "../layouts/MainGridLayout.astro";
import { siteConfig } from "../config";
---

<MainGridLayout title="404 - Page Not Found" description="The page you're looking for doesn't exist">
    <div class="card-base px-8 py-12 text-center">
        <div class="mb-8">
            <h1 class="text-6xl font-bold text-[var(--primary)] mb-4">404</h1>
            <h2 class="text-2xl font-semibold text-black/75 dark:text-white/75 mb-4">Page Not Found</h2>
            <p class="text-black/50 dark:text-white/50 mb-8 max-w-md mx-auto">
                The page you're looking for doesn't exist or has been moved.
            </p>
            <a href="/" class="btn-card inline-flex items-center gap-2 px-6 py-3 rounded-xl">
                <span>Back to Home</span>
            </a>
        </div>
    </div>
</MainGridLayout>
