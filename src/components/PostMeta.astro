---
import { Icon } from "astro-icon/components";
import { formatDateToYYYYMMDD } from "../utils/date-utils";
import { getCategoryUrl, getTagUrl } from "../utils/url-utils";

// Component properties interface definition
interface Props {
  class: string; // External CSS class name
  published: Date; // Article publication date (required)
  updated?: Date; // Article last update date (optional)
  tags: string[]; // Article tags array
  category: string | null; // Article category (can be empty)
  hideTagsForMobile?: boolean; // Whether to hide tags on mobile
  hideUpdateDate?: boolean; // Whether to hide update date
}

// Destructure Astro.props to get parameters
const {
  class: className, // Rename to avoid conflict with JS keyword
  published,
  updated,
  tags,
  category,
  hideTagsForMobile = false, // Default to show tags on mobile
  hideUpdateDate = false, // Default to show update date
} = Astro.props;

// Pre-calculate whether update date should be shown
const shouldShowUpdated = 
  !hideUpdateDate && // Update date hiding not set
  updated && // Update date exists
  updated.getTime() !== published.getTime(); // Update date differs from publication date

// Pre-calculate whether there are tags
const hasTags = tags && tags.length > 0;

// Pre-calculate whether there is a category
const hasCategory = category && category.trim() !== "";
---

<!-- 
  Blog article metadata container
  Displays: publication date, update date, category and tags
  Responsive design: tags can be hidden on mobile
-->
<div 
  class:list={[
    "flex flex-wrap text-neutral-500 dark:text-neutral-400",
    "items-center gap-4 gap-x-4 gap-y-2",
    className
  ]}
>
  <!-- Publication date -->
  <div class="flex items-center">
    <div class="meta-icon">
      <!-- Calendar icon -->
      <Icon name="material-symbols:calendar-today-outline-rounded" class="text-xl" />
    </div>
    <!-- Formatted date -->
    <span class="text-50 text-sm font-medium">
      {formatDateToYYYYMMDD(published)}
    </span>
  </div>

  <!-- Update date (conditional rendering) -->
  {shouldShowUpdated && (
    <div class="flex items-center">
      <div class="meta-icon">
        <!-- Edit icon -->
        <Icon name="material-symbols:edit-calendar-outline-rounded" class="text-xl" />
      </div>
      <!-- Formatted update date -->
      <span class="text-50 text-sm font-medium">
        {formatDateToYYYYMMDD(updated)}
      </span>
    </div>
  )}

  <!-- Article category (only shown when category exists) -->
  {hasCategory && (
    <div class="flex items-center">
      <div class="meta-icon">
        <!-- Book icon -->
        <Icon name="material-symbols:book-2-outline-rounded" class="text-xl" />
      </div>
      <div class="flex flex-row flex-nowrap items-center">
        <!-- Category link -->
        <a 
          href={getCategoryUrl(category)} 
          aria-label={`View all posts in the ${category} category`}
          class="link-lg transition text-50 text-sm font-medium
                 hover:text-[var(--primary)] dark:hover:text-[var(--primary)] whitespace-nowrap"
        >
          {category}
        </a>
      </div>
    </div>
  )}

  <!-- Article tags (only shown when tags exist) -->
  {hasTags && (
    <div 
      class:list={[
        "items-center",
        {
          "flex": !hideTagsForMobile, // Show on PC and when not hidden
          "hidden md:flex": hideTagsForMobile // Hide on mobile, show on medium screens and above
        }
      ]}
    >
      <div class="meta-icon">
        <!-- Tag icon -->
        <Icon name="material-symbols:tag-rounded" class="text-xl" />
      </div>
      <div class="flex flex-row flex-nowrap items-center">
        <!-- Render tag list -->
        {tags.map((tag, index) => (
          <>
            {/* Add separator between tags (not before first tag) */}
            {index > 0 && (
              <div class="mx-1.5 text-[var(--meta-divider)] text-sm">/</div>
            )}
            {/* Single tag link */}
            <a
              href={getTagUrl(tag)}
              aria-label={`View all posts with the ${tag.trim()} tag`}
              class="link-lg transition text-50 text-sm font-medium
                     hover:text-[var(--primary)] dark:hover:text-[var(--primary)] whitespace-nowrap"
            >
              {tag.trim()}
            </a>
          </>
        ))}
      </div>
    </div>
  )}
</div>